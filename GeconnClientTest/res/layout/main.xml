<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Hello World, ClientActivity"
            />
    <Button
        android:id="@+id/btnGetChannels"
        android:text="GetChannels"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />
    <Button
        android:id="@+id/btnSendVoiceMessage"
        android:text="SendVoiceMessage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />
    <Button
        android:id="@+id/btnToggleMute"
        android:text="Toggle Mute"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />
    <Button
        android:id="@+id/btnIsMuted"
        android:text="Is Muted"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>

